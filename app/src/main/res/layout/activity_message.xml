<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MessageActivity">


    <LinearLayout
        android:weightSum="5"
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/colorSecondary"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:layout_weight=".15"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/_50sdp">

            <ImageView
                android:id="@+id/img_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/man">
            </ImageView>

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_weight="4.5"
            android:id="@+id/txt_ChattingWith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_10sdp"></TextView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_weight=".35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_35sdp">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_baseline_videocam_24">

            </ImageView>

            <ImageView
                android:id="@+id/img2"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_baseline_call_24"
                app:layout_constraintLeft_toLeftOf="@+id/img1"
                android:layout_marginLeft="@dimen/_35sdp">

            </ImageView>

            <ImageView
                android:id="@+id/img3"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_baseline_more_vert_24"
                app:layout_constraintLeft_toLeftOf="@+id/img2"
                android:layout_marginLeft="@dimen/_35sdp">

            </ImageView>


        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>


    <ProgressBar
        android:id="@+id/progress_messages"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ProgressBar>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_messages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"

        app:layout_constraintBottom_toTopOf="@+id/edt_txt"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"></androidx.recyclerview.widget.RecyclerView>


    <EditText
        android:id="@+id/edt_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_32sdp"
        android:maxHeight="@dimen/_100sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:layout_marginHorizontal="@dimen/_3sdp"
        android:background="@drawable/message_input_background_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgSendMessage"
        app:layout_constraintStart_toStartOf="parent"></EditText>


    <ImageView
        android:id="@+id/imgSendMessage"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"
        android:src="@drawable/send_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_9sdp"
        >
    </ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>